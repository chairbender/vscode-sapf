{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "sapf",
	"fileTypes": [
		"sapf"
	],
	"patterns": [
	  {
		"name": "comment.sapf",
		"match": ";.*$"
	  },
	  {
		"name": "number.sapf",
		"match": "(?<![\\w\\-\\.])\\-?\\d*\\.?\\d*e?(\\-?\\d*\\.?\\d*)?(pi|[Mkhcmu])?(?![\\w\\.])"
	  },
	  { 
		"begin": "\"",
		"end": "\"",
		"name": "string.sapf",
		"patterns": [
		  {
			"match": "\\\\\\\\.",
			"name": "string.escape.sapf"
		  }
		]
	  },
	  {
		"name": "word.sapf",
		"match": "TODO"
	  },
	  {
		"name": "keyword.operator.sapf",
		"match": "[*+/\\-]"
	  },
	  {
		"name": "variable.function.sapf",
		"match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
	  },
	  {
		"name": "punctuation.section.brackets.sapf",
		"match": "\\[|\\]"
	  }
	],
	"scopeName": "source.sapf"
} 