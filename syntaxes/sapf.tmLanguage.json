{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "sapf",
	"fileTypes": [
		"sapf"
	],
	"patterns": [
	  {
		"name": "comment.sapf",
		"match": ";.*$"
	  },
	  {
		"name": "number.sapf",
		"match": "(?<=(?:^|[\\`\\'\\,\\.\\[\\]\\{\\}\\(\\)\\s]))(?:[^\\`\\'\\,\\.\\[\\]\\{\\}\\(\\)\\s])\\-?\\d*\\.?\\d*e?(?:\\-?\\d*\\.?\\d*)?(?:pi|[Mkhcmu])?(?=(?:$|[\\`\\'\\,\\.\\[\\]\\{\\}\\(\\)\\s]))"
	  },
	  { 
		"begin": "\"",
		"end": "\"",
		"name": "string.sapf",
		"patterns": [
		  {
			"match": "\\\\\\\\.",
			"name": "string.escape.sapf"
		  }
		]
	  },
	  {
		"name": "word.sapf",
		"match": "(?<=(?:^|[\\\\\\`\\'\\,\\.\\[\\]\\{\\}\\(\\)\\s]))(?![\\[\\]\\{\\}\\(\\)\\s])[a-zA-Z=]+(?=(?:$|[\\`\\'\\,\\.\\[\\]\\{\\}\\(\\)\\s]))"
	  }
	],
	"scopeName": "source.sapf"
} 